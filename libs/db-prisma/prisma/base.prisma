datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client"
  output   = "../types/src/lib/@generated/prisma"
}

generator nestgraphql {
  provider           = "prisma-nestjs-graphql"
  output             = "../types/src/lib/@generated/graphql"
  reExport           = "All"
  prismaClientImport = "@boundless/types/prisma"
}
